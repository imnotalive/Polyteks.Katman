@model Polyteks.Katman.DAL.Concrete.EntityFramework.SrcnToplantiRadevus

<div id="@Model.ToplantiRandevuId" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">TOPLANTI DETAYLARI</h4>
            </div>
      

                <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="text-center"><b class="font-red-sunglo">@Model.ToplantiBasligi</b></h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.Raw(Model.ToplantiAciklamaca)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">KAPAT</button>
                </div>
         
        </div>

    </div>
</div>