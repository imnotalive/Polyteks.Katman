@model Polyteks.Katman.TefrikBildirim.Areas.Deneme.Models.MerveModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">

        <table class="table table-bordered">
            @{
                int i = -1;
                foreach (var satir in Model.Matris)
                {
                    i++;
                    int j = -1;
                <tr>
                    @foreach (var sutun in satir.Sutunlar)
                    {
                        j++;
                        <td>@Html.TextBoxFor(a => a.Matris[i].Sutunlar[j], new { @class = "form-control" })</td>
                    }
                </tr>
                    }
                }
        </table>
    </div>
</div>