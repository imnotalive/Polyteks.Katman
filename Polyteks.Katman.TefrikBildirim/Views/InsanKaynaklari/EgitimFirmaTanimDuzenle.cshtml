@model Polyteks.Katman.TefrikBildirim.Models.IkModel

@{
    ViewBag.Title = "EgitimFirmaTanimDuzenle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section styles
{
    <style>
        label {
            font-weight: bold;
        }
    </style>
}

@if (TempData["Msg"] != null)
{
    <div class="custom-alerts alert alert-@TempData["class"] fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
        <h2>@Html.Raw(TempData["Msg"])</h2>
    </div>
}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-blue">
                    <i class="icon-settings font-blue"></i>


                    <span class="caption-subject bold uppercase">EĞİTİM-FİRMA DÜZENLE</span>
                </div>
            </div>
            <div class="portlet-body form">
                @Html.Partial("~/Views/InsanKaynaklari/_IkBaseButonlar.cshtml", Model)
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm())
                        {
                            @Html.HiddenFor(a => a.IkEgitimFirma.IkEgitimFirmaId)

                            <div class="modal-body">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><b>EĞİTİM </b></label>
                                                @Html.DropDownListFor(a => a.IkEgitimFirma.IkEgitimId, Model.DropEgitimler, "Seçiniz", new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><b>FİRMA </b></label>
                                                @Html.DropDownListFor(a => a.IkEgitimFirma.IkFirmaId, Model.DropFirmalar, "Seçiniz", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label><b>AÇIKLAMA </b></label>
                                                @Html.TextAreaFor(a => a.IkEgitimFirma.Aciklama, new { @class = "form-control", @rows = 5 })
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn green btn-block">KAYDET</button>

                            </div>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>