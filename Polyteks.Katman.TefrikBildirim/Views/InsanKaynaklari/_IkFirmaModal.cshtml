@using Polyteks.Katman.DAL.Concrete.EntityFramework

@model Polyteks.Katman.DAL.Concrete.EntityFramework.SrcnIkFirmas

    <div id="@Model.IkFirmaId" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Firma Tanımlama</h4>
                </div>
                @using (Html.BeginForm("FirmaEkleDuzenle", "InsanKaynaklari"))
                {
                    @Html.HiddenFor(a => a.IkFirmaId)

                    <div class="modal-body">
                        <div class="form-body">
                            <div class="row">
   
                                <br/>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label><b>FİRMA ADI</b></label>
                                        @Html.TextBoxFor(a => a.IkFirmaAdi, new {@class = "form-control"})
                                    </div>
                                    
                                    <div class="form-group">
                                        <label><b>AÇIKLAMA</b></label>
                                        @Html.TextAreaFor(a => a.Aciklama, new {@class = "form-control",@rows=5})
                                    </div>
                                </div>
                         
                            </div>
                         

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn green">KAYDET</button>
                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">KAPAT</button>
                    </div>
                }
            </div>

        </div>
    </div>