@model Polyteks.Katman.TefrikBildirim.Models.ImalatDenemeModel

@{
    ViewBag.Title = "DenemeDosyaDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@if (TempData["Msg"] != null)
{
    <div class="custom-alerts alert alert-@TempData["class"] fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
        <h2>@Html.Raw(TempData["Msg"])</h2>
    </div>
}
@{
    string GrupAdi = String.Format("{0} {1}  DENEME & NUMUNE DOSYA DETAYLARI", Model.DenemeDosya.BirimAdi, Model.DenemeDosya.DenemeAdi );



}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="icon-settings font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> @GrupAdi</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                    @using (Html.BeginForm("DenemeAdiDegistir","Imalat"))
                    {
                        @Html.HiddenFor(a=>a.DenemeDosya.DenemeDosyaId)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><b class="font-green"> TANIM KODU </b></label>
                                    @Html.TextBoxFor(a => a.DenemeDosya.DenemeAdi, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><b class="font-green"> &nbsp; </b></label>
                                    <div class="form-actions">
                                        <button type="submit" class="btn blue btn-block">TANIM KODU DEĞİŞTİR</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                     
                    }
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b class="font-blue">CARİ </b></label>
                            @Html.TextBoxFor(a => a.DenemeDosya.CariAdi, new { @class = "form-control", @onkeydown = "return false" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b class="font-blue">OLUŞTURMA TARİHİ </b></label>
                            @Html.TextBoxFor(a => a.DenemeDosya.OlusturmaTarihi, new { @class = "form-control", @onkeydown = "return false" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b class="font-red-sunglo">KAYIT YAPAN </b></label>
                            @Html.TextBoxFor(a => a.DenemeDosya.KayitYapanKulAdi, new { @class = "form-control", @onkeydown = "return false" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-8">
                </div>

                <div class="col-md-4">
                    <a class="btn yellow btn-block" href="@Url.Action("ImalatPartiAltKlasorDosyaEkle", "Imalat", new {id = Model.DenemeDosya.DenemeDosyaId})">
                        @{
                            string tanim = string.Format("YENİ DETAY EKLE");
                        }
                        @tanim
                    </a>
                </div>
            </div>
            <br />
