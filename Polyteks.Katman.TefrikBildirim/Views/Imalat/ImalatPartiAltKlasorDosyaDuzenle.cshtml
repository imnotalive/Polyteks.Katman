@model Polyteks.Katman.TefrikBildirim.Models.ImalatPartiAltKlasorModel

@{
    ViewBag.Title = "ImalatPartiAltKlasorDosyaDuzenle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@if (TempData["Msg"] != null)
{
    <div class="custom-alerts alert alert-@TempData["class"] fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
        <h2>@Html.Raw(TempData["Msg"])</h2>
    </div>
}
@{
    string GrupAdi = String.Format("{0} {1} {2} DÜZENLE", Model.PartiAltKlasor.BirimAdi, Model.PartiAltKlasor.PartiAltKlasorKodAdi, Model.PartiAltKlasor.PartiAltKlasorTipAdi.ToUpper());



}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="icon-settings font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> @GrupAdi</span>
                </div>
            </div>

            <div class="row">

                @using (Html.BeginForm("ImalatPartiAltKlasorDosyaDuzenle", "Imalat"))
                {

                    @Html.HiddenFor(a => a.PartiAltKlasorDosya.PartiAltKlasorDosyaId)
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label><b class="font-red-sunglo"> @Model.PartiAltKlasor.PartiAltKlasorTipAdi TANIM KODU </b></label>
                                    @Html.TextBoxFor(a => a.PartiAltKlasor.PartiAltKlasorKodAdi, new { @class = "form-control", @onkeydown = "return false" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label><b class="font-blue">SEÇİLEN MAKİNE </b></label>
                                    @Html.TextBoxFor(a => a.Makine.MakineNo, new { @class = "form-control", @onkeydown = "return false" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label><b class="font-green">İŞLEM TÜRÜ </b></label>
                                    @Html.TextBoxFor(a => a.Islem.IslemTuru, new { @class = "form-control", @onkeydown = "return false" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="col-md-12">
                        <div class="row">

                            @{
                                int i = -1;
                                foreach (var item in Model.PartiAltKlasorDosyaItemlar)
                                {
                                    i++;
                                    @Html.HiddenFor(a => a.PartiAltKlasorDosyaItemlar[i].ParametreNo)
                                    @Html.HiddenFor(a => a.PartiAltKlasorDosyaItemlar[i].PartiAltKlasorDosyaItemId)
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label><b>@item.ParametreAdi.ToUpper().Trim() </b></label>
                                            @Html.TextBoxFor(a => a.PartiAltKlasorDosyaItemlar[i].ParametreDegeri, new { @class = "form-control" })
                                        </div>
                                    </div>

                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-lg blue btn-block"><i class="fa fa-floppy-o"></i> KAYDET</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

