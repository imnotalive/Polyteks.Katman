@model IEnumerable<Polyteks.Katman.DAL.Concrete.EntityFramework.Mrv_MalzemeAna>

<br />
<br />
<table id="c" class="table table-bordered table-striped">
    <thead>
        <tr style="background-color: #17a2b8" class="text-center">
            <th>
                <b>TALEP NUMARASI</b>
            </th>
            <th>
                <b>TARİH</b>
            </th>
            <th>
                <b>TALEP EDEN BÖLÜM</b>
            </th>
            <th>
                <b>TALEP EDİLEN AMBAR</b>
            </th>
            <th><b>TALEPLER</b></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <center><b># @Html.DisplayFor(modelItem => item.MalzemeNo)</b></center>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bolum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmbarAdi)
                </td>
                <td>

                    <table id="c" class="table table-bordered table-info">
                        <thead>
                            <tr style="background-color: #80471C">
                                <th>
                                    Parti Numarası
                                </th>
                                <th>
                                    Stok Adı
                                </th>

                                <th>
                                    Kalite
                                </th>
                                <th>
                                    Firma
                                </th>


                                <th>
                                    Miktar
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detay in item.Mrv_MalzemeDetay)
                            {
                                <tr>
                                    <td> @(detay.Parti)</td>
                                    <td>@(detay.StokAdi)</td>

                                    <td> @(detay.Kalite)</td>

                                    <td> @(detay.Firma)</td>

                                    <td> @(detay.Miktar)</td>


                                </tr>
                            }
                        </tbody>
                    </table>

                </td>

            </tr>
        }
    </tbody>
</table>
