            @Html.EditorFor(model => model.Mrv_MalzemeAna.Personel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mrv_MalzemeAna.Personel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mrv_MalzemeDetay.Parti, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Mrv_MalzemeDetay.Parti, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mrv_MalzemeDetay.Parti, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Mrv_MalzemeDetay.Kalite, htmlAttributes: new { @class = "control-label col-md-2" })
