                @Html.ValidationMessageFor(model => model.Mrv_MalzemeDetay.Kalite, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Mrv_MalzemeDetay.Miktar, htmlAttributes: new { @class = "control-label col-md-2" })
