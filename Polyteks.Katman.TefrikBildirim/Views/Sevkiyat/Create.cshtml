                @Html.ValidationMessageFor(model => model.Mrv_MalzemeDetay.Miktar, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Talep Oluştur" class="btn btn-info" />
        </div>
    </div>
</div>
}


