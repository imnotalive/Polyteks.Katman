@model Polyteks.Katman.TefrikBildirim.Models.MalzemeTalepViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
    var StokID = ViewData["IATOPartiNo"] as SelectList;
}

<CENTER><h2><b>MALZEME TALEBİ</b></h2></CENTER>

@using (Html.BeginForm()) 
{
