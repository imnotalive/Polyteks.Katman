@model Polyteks.Katman.Has.Models.TefrikAnalizModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">TEFRİK HATALARI</span>
                </div>
           
            </div>
            <div class="portlet-body">
                <ul class="nav nav-pills">
                    
                    @foreach (var item in Model.MakineTurListe.ToList())
                    {
                        string aktifClass = null;

                        if (Model.MakineTur == item)
                        {
                         aktifClass = "active";

                        }
                        <li class="@aktifClass">
                            <a href="@Url.Action("Bolum","Home",new{id=item.Id})" ><h4> <b>@item.Tanim</b> </h4></a>
                        </li>
                    }
             
              
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active in">
                        <h1 class="text-center"><b class="font-red">!!! LÜTFEN İLGİLİ BÖLÜMÜ SEÇİNİZ !!!</b></h1>
                    </div>
            
                </div>
            </div>
        </div>
    </div>
</div>

