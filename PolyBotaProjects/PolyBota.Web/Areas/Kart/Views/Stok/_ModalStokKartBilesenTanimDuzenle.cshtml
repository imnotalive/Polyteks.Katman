@using System.Activities.Expressions
@model PolyBota.Web.Areas.Kart.Models.KartStokModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">@Html.Raw(Model.StokKartOperasyon.Id == 0 ? "YENİ KAYIT" : "KAYIT DÜZENLE")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="frm-bilesen">

            @Html.HiddenFor(a => a.StokKart.Id)
            @Html.HiddenFor(a => a.StokKartBilesenCinsi.Id)
            @Html.HiddenFor(a => a.StokKartBilesenCinsi.BagliOlduguId)

          
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <b>@Html.Raw(Model.BilesenCinsis.First(a=>a.Id==Model.StokKartBilesenCinsi.BilesenCinsiId).BilesenCinsiAdi)</b>
                     @Html.TextBoxFor(a=>a.StokKartBilesenCinsi.StokBilesenAdi, new{@class="form-control"})
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <b>&nbsp;</b>
                        <a href="javascript:" class="btn btn-info btn-block" onclick="frmSerialize('#frm-bilesen', 21)" data-dismiss="modal">Kaydet</a>
                    </div>
                </div>

            </div>

        </form>
    </div>

    <div class="modal-footer ">
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">KAPAT</button>
    </div>
</div>