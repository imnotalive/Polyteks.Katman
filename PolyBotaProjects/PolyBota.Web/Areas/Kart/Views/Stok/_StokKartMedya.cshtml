@model PolyBota.Web.Areas.Kart.Models.KartStokModel
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-6" style="border-right: 2px dashed">
        <h5 class="text-center">KAPAK RESMİ</h5>
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>

            <div class="col-md-12">

                @using (Html.BeginForm("StokKartResimDegistir", "Stok", FormMethod.Post, new
                {
                    enctype = "multipart/form-data",
                    id = "frm-stokresim"
                }))
                {
                    @Html.HiddenFor(a => a.StokKart.Id)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <b>Dosya Seçimi</b>
                                <input type="file" name="file" class="form-control" id="File"/>



                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <b> &nbsp; </b>
                                <input type="submit" value="Resim Değiştir" class="btn btn-secondary btn-block"/>


                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-12">
                <hr/>
            </div>
            <div class="col-md-8">
                @if (Model.StokKart.ImageUrl != null)
                {
                    <div class="col-md-12">
                        <a href="@Url.Content(Model.StokKart.ImageUrl)" target="_blank"> <img src="@Url.Content(Model.StokKart.ImageUrl)" class="img-thumbnail img-responsive" style="width: 100%"/></a>
                    </div>
                }
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <h5 class="text-center">EK DOSYALAR </h5>
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
            <div class="col-md-12">

                @using (Html.BeginForm("StokKartMedyaEkle", "Stok", FormMethod.Post, new
                {
                    enctype = "multipart/form-data",
                    id = "frm-stokresim2"
                }))
                {
                    @Html.HiddenFor(a => a.StokKart.Id)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <b>Medya Adı</b>
                                @Html.TextBoxFor(a => a.Medya.MedyaAdi, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <b>Dosya Seçimi</b>
                                <input type="file" name="file" class="form-control" id="File"/>



                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">

                                <input type="submit" value="Dosya Ekle" class="btn btn-secondary btn-block"/>


                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-12">
                <hr/>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Dosya</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        int p = 0;
                        foreach (var medya in Model.Medyas)
                        {
                            p++;
                            <tr>
                                <td>@p</td>
                                <td><a href="@Url.Content(medya.FileName)" target="_blank" class="btn btn-secondary btn-block">@medya.MedyaAdi</a></td>
                                <td><a href="javasript:" onclick="StokKartMedyaSil(@medya.Id)" class="btn btn-danger btn-block">Sil</a></td>
                            </tr>
                        }

                    }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

