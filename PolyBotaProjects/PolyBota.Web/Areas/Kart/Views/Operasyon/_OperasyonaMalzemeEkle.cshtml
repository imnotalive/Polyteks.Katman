@model PolyBota.Web.Areas.Kart.Models.KartOperasyonModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">@Html.Raw(Model.StokKartOperasyon.Id == 0 ? "YENİ KAYIT" : "MALZEME KULLANIMI")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>



    <form id="frm-opMalzeme">

        @Html.HiddenFor(a => a.StokKartOperasyon.Id)

        <div class="modal-body">
            <div class="row">


                <div class="col-md-12">
                    <div class="form-group">
                        <b>Kullanılan Malzeme</b>
                        @Html.DropDownListFor(a => a.intId, Model.DropItems.Select(b => new SelectListItem()
                        {
                            Text = b.Tanim,
                            Value = b.Id
                        }), new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <b>Kullanılan Miktar</b>
                        @Html.TextBoxFor(a => a.StokKartOperasyonKullanilanMalzeme.Miktar, new { @class = "form-control" })
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <b> &nbsp; </b>
                        <a href="javascript:" class="btn btn-success btn-block" onclick="frmSerialize(3)">KAYDET</a>
                    </div>



                </div>
            </div>


        </div>
        <div class="modal-footer ">
            <button type="button" class="btn btn-default btn-danger" data-dismiss="modal" id="mdlKapat">KAPAT</button>

        </div>
    </form>



</div>

