
@model PolyBota.DAL.User


<div class="modal fade" id="modal-0" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kullanıcı Ekle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
               @using (Html.BeginForm("UserEkle", "Tanimlamalar"))
                {
                    @Html.HiddenFor(a => a.Id)

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label"><b>İsim Soyisim </b></label>
                                    <div class="input-icon right">
                                        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label"><b>Kullanıcı Adı </b></label>
                                    <div class="input-icon right">
                                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label"><b>Şifre </b></label>
                                    <div class="input-icon right">
                                        @Html.TextBoxFor(a => a.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">

                        <button type="submit" class="btn green">KAYDET</button>
                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">KAPAT</button>
                    </div>
                }
          
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>